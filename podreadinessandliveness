apiVersion: v1
kind: Pod
metadata:
  creationTimestamp: null
  labels:
    run: pod
  name: pod
spec:
  containers:
  - image: nginx
    name: pod
    ports:
    - containerPort: 80
    readinessProbe:
      initialDelaySeconds: 2
      httpGet:
        path: /
        port: 80
    livenessProbe:
      initialDelaySeconds: 10
      periodSeconds: 5
      httpGet:
        path: /health
        port: 80
    resources: {}
  dnsPolicy: ClusterFirst
  restartPolicy: Always
status: {}
~                                                                                                              
~                                                                                                              
~                                                                                                              
